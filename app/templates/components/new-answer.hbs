{{#if addNewAnswer}}
  <h3>Your guesses</h3>
  <div class="col-md-6">
    <form>
      <div class="form-group">
        {{input class="form-control" value=author placeholder="Author" id="author"}}
      </div>
      <div class="form-group">
        {{textarea class="form-control" placeholder="Response" rows="3" value=response id="response"}}
      </div>
      <button class="btn btn-default" {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>

{{else}}
  <button {{action 'answerFormShow'}}>Answer</button>
{{/if}}
