{{message.riddle}}
<br> asked by ~{{message.author}}
{{#if isImageShowing}}
  <p><img src= {{message.image}} alt= {{message.hint}} {{action 'imagesHide'}}></p>
{{else}}
  <button class="btn btn-info" {{action 'imageShow'}}>Image</button>
{{/if}}

<ul>
  {{#each message.answers as |answer|}}
    {{answer-tile answer=answer destroyAnswer="destroyAnswer"}}
  {{/each}}
</ul>

<button class="btn btn-danger" {{action 'delete' message}}><span  class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
