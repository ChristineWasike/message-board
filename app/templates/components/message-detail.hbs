<br> asked by ~{{message.author}}
{{#if isImageShowing}}
  <p><img src= {{message.image}} alt= {{message.hint}} {{action 'imagesHide'}}></p>
{{else}}
  <button class="btn btn-info" {{action 'imageShow'}}>Image</button>
{{/if}}
{{update-message message=message update="update"}}
<button class="btn btn-danger" {{action 'delete' message}}>Delete</button>
